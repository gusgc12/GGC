    private void jButton7ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String negativo= jTextField1.getText();
        if(negativo.endsWith("-")){
        }
        else{
            negativo=negativo + "-";
            jTextField1.setText(negativo);
        }   
    }                                        

