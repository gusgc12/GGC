    private void jButton19ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        String res;
        res=jTextField1.getText();
        if(res==""){
            ingresarNum("0.");
            if(res.endsWith("."));  
        }
        else{
            ingresarNum(".");
        }
    }                                         

    private void jButton20ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        String operacion= jTextField1.getText();
        String postfija;
        String resultado;
        Calculador a= new Calculador(operacion);
        if(a.revisarParentesis()){
            postfija=a.aPostFijo();
            resultado=a.evaluaOperación(postfija);
            this.jTextField1.setText(resultado);
        }
        else{
            this.jTextField1.setText("Error");
            
        
    }
    }                                         

